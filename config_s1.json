{
    "name": "AttentionChess",
    "n_gpu": 1,

    "arch": {
        "type": "AttChess",
        "args": {
            "hidden_dim": 96,
            "num_heads": 4,
            "num_encoder": 10,
            "num_decoder": 2,
            "dropout": 0.1
        }
    },
    "data_loader": {
        "type": "RuleAttentionChessLoader",
        "args":{
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.001,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-4,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "rule_teaching_loss",
    "metrics": [
        "rule_teaching_loss"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1e5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_rule_teaching_loss",
        "early_stop": 1e10,

        "tensorboard": true
    }
}
