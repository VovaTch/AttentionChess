{
    "name": "AttentionChess",
    "n_gpu": 1,

    "arch": {
        "type": "AttChess",
        "args": {
            "hidden_dim": 256,
            "num_heads": 4,
            "num_encoder": 8,
            "num_decoder": 4,
            "dropout": 0.0
        }
    },
    "data_loader": {
        "type": "RuleAttentionChessLoader",
        "args":{
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.01,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-6,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss":
    {
        "type": "Criterion",
        "args": {
            "eos_coef": 0.45,
            "losses": ["labels", "cardinality", "cardinality_direction", "mse_score"]
        }
    },
    "loss_weights":
    {
        "loss_labels": 5,
        "loss_score": 0
    },
    "metrics": [
        "mse_score_loss", "cardinality_loss", "cardinality_loss_direction", "label_loss"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 250,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_cardinality_loss",
        "early_stop": 1e10,

        "tensorboard": true
    }
}
