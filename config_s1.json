{
    "name": "AttentionChess",
    "n_gpu": 1,

    "arch": {
        "type": "AttChess",
        "args": {
            "hidden_dim": 32,
            "num_heads": 8,
            "num_encoder": 4,
            "num_decoder": 4,
            "num_chess_conv_layers": 0,
            "p_embedding": true,
            "dropout": 0.0
        }
    },
    "data_loader": {
        "type": "RuleAttentionChessLoader",
        "args":{
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.01,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-1,
            "weight_decay": 1e-5,
            "amsgrad": false
        }
    },
    "loss":
    {
        "type": "Criterion",
        "args": {
            "eos_coef": 4e-3,
            "losses": ["quality_loss", "board_value_loss"]
        }
    },
    "loss_weights":
    {
        "loss_quality": 1,
        "loss_board_value": 10
    },
    "metrics": [
        "quality_loss", "board_value_loss"
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "max_lr": 1e-1,
            "epochs": 1,
            "steps_per_epoch": 12375,
            "three_phase": true
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 1e10,

        "tensorboard": true
    }
}
