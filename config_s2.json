{
    "name": "AttentionChess",
    "n_gpu": 1,

    "arch": {
        "type": "AttChess",
        "args": {
            "num_heads": 4,
            "num_encoder": 4,
            "num_decoder": 4,
            "num_chess_conv_layers": 0,
            "p_embedding": true,
            "dropout": 0.0
        }
    },
    "data_loader": {
        "type": "GuidedSelfPlayLoader",
        "args":{
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.00,
            "num_workers": 0,
            "epochs_per_game": 3,
            "min_counts": 10,
            
            "device": "cuda:0"
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-3,
            "weight_decay": 1e-6,
            "amsgrad": false
        }
    },
    "loss":
    {
        "type": "Criterion",
        "args": {
            "eos_coef": 1,
            "losses": ["quality_loss", "board_value_loss"]
        }
    },
    "loss_weights":
    {
        "loss_quality": 1,
        "loss_board_value": 10
    },
    "metrics": [
        "quality_loss", "board_value_loss"
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "max_lr": 1e-3,
            "epochs": 1,
            "steps_per_epoch": 3126,
            "three_phase": true
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_mse_score_loss",
        "early_stop": 1e10,
        "clip_grad_norm": 0.1,

        "tensorboard": true
    }
}
