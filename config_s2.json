{
    "name": "AttentionChess",
    "n_gpu": 1,

    "arch": {
        "type": "AttChess",
        "args": {
            "hidden_dim": 32,
            "num_heads": 8,
            "num_encoder": 6,
            "num_decoder": 6,
            "num_chess_conv_layers": 0,
            "p_embedding": false,
            "dropout": 0.0
        }
    },
    "game_roller": {
        "type": "GameRoller",
        "args":{
            "move_limit": 300,
            "argmax_start": 300,
            "discard_draws": true
        }
    },
    "data_loader": {
        "type": "SelfPlayChessLoader",
        "args":{
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.01,
            "num_workers": 1,
            "num_of_branches": 10,
            "expansion_constant": 0.01,
            "exploration_prob": 0.2
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-1,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss":
    {
        "type": "Criterion",
        "args": {
            "eos_coef": 0.25,
            "losses": ["mse_score"]
        }
    },
    "loss_weights":
    {
        "loss_score": 1
    },
    "metrics": [
        "mse_score_loss"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 250,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_mse_score_loss",
        "early_stop": 1e10,

        "tensorboard": true
    }
}
