{
    "name": "AttentionChess",
    "n_gpu": 1,
    "task_name": "AttChess Random Self Play Training",

    "arch": {
        "type": "AttChess",
        "args": {
            "num_heads": 32,
            "num_encoder": 6,
            "num_decoder": 6,
            "num_chess_conv_layers": 0,
            "p_embedding": true,
            "dropout": 0.0,
            "ripple_net": false
        }
    },
    "data_loader": {
        "type": "RandomSelfPlayLoader",
        "args":{
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.00,
            "num_workers": 0,
            "epochs_per_game": 5,
            "min_counts": 20,
            "device": "cuda:0",
            "boards_per_sample": 64
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-4,
            "weight_decay": 1e-7,
            "amsgrad": false
        }
    },
    "loss":
    {
        "type": "Criterion",
        "args": {
            "eos_coef": 1,
            "losses": ["loss_quality", "loss_board_value"]
        }
    },
    "loss_weights":
    {
        "loss_quality": 1,
        "loss_board_value": 10
    },
    "metrics": [
        "quality_loss", "board_value_loss"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "gamma": 0.1,
            "step_size": 100
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_mse_score_loss",
        "early_stop": 1e10,
        "clip_grad_norm": 0.1,

        "tensorboard": true
    }
}
